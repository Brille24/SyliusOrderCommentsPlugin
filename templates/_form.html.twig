<div class="ui">
    {{ form_start(form, {'action': path(submitPath, { 'orderId': orderId}), 'attr': {'class': 'ui reply form', 'novalidate': 'novalidate'}}) }}
    <div class="field">
        {{ form_row(form.message) }}
    </div>
    <div class="field">
        {{ form_row(form.file) }}
    </div>
    <div class="field">
        {{ form_label(form.notifyCustomer) }}
        {{ form_widget(form.notifyCustomer) }}
    </div>
    <button type="submit" class="ui labeled icon blue button"><i class="edit icon"></i> {{ 'sylius.ui.comment'|trans }}</button>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
</div>
