<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
       <service id="sylius_order_comment_plugin.command_handler.comment_order_by_customer" class="Sylius\OrderCommentsPlugin\Application\CommandHandler\CommentOrderByCustomerHandler">
           <argument type="service" id="sylius.repository.order" />
           <argument type="service" id="doctrine.orm.default_entity_manager" />
           <tag name="command_handler" handles="Sylius\OrderCommentsPlugin\Application\Command\CommentOrderByCustomer" />
       </service>
       <service id="sylius_order_comment_plugin.command_handler.comment_order_by_administrator" class="Sylius\OrderCommentsPlugin\Application\CommandHandler\CommentOrderByAdministratorHandler">
           <argument type="service" id="sylius.repository.order" />
           <argument type="service" id="doctrine.orm.default_entity_manager" />
           <tag name="command_handler" handles="Sylius\OrderCommentsPlugin\Application\Command\CommentOrderByAdministrator" />
       </service>

        <service id="sylius_admin_order_comment_plugin.block_event_listener" class="Sylius\Bundle\UiBundle\Block\BlockEventListener">
            <argument>@SyliusOrderCommentsPlugin/injected/admin_order_comments.html.twig</argument>
            <tag name="kernel.event_listener" event="sonata.block.event.sylius.admin.order.show.after_summary" method="onBlockEvent" />
        </service>

        <service id="sylius_shop_order_comment_plugin.block_event_listener" class="Sylius\Bundle\UiBundle\Block\BlockEventListener">
            <argument>@SyliusOrderCommentsPlugin/injected/shop_order_comments.html.twig</argument>
            <tag name="kernel.event_listener" event="sonata.block.event.sylius.shop.account.order.show.after_summary" method="onBlockEvent" />
        </service>

        <service id="sylius.order_comments_plugin.infrastructure.controller.ui.render_comment_order_action" class="Sylius\OrderCommentsPlugin\Infrastructure\Controller\Ui\RenderCommentOrderAction">
            <argument type="service" id="fos_rest.view_handler.default" />
            <argument type="service" id="form.factory" />
        </service>

        <service id="sylius.order_comments_plugin.infrastructure.controller.ui.administrator_comment_order_action" class="Sylius\OrderCommentsPlugin\Infrastructure\Controller\Ui\AdministratorCommentOrderAction">
            <argument type="service" id="fos_rest.view_handler.default" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="simple_bus.command_bus" />
        </service>

        <service id="sylius.order_comments_plugin.infrastructure.controller.ui.customer_comment_order_action" class="Sylius\OrderCommentsPlugin\Infrastructure\Controller\Ui\CustomerCommentOrderAction">
            <argument type="service" id="fos_rest.view_handler.default" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="simple_bus.command_bus" />
        </service>
    </services>
</container>
